{
  "apps": [
    {
      "name": "book-share",
      "script": "app.js",
      "watch": true,
      "ignore_watch": [
        "node_modules",
        "logs"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "kill_timeout": 1000,
      "error_file": "logs/err.log",
      "out_file": "logs/out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "production"
      },
      "env_development": {
        "NODE_ENV": "development"
      },
      "instances": 1,
      "max_memory_restart": "1000M",
      "exec_mode": "cluster"
    }
  ]
}
